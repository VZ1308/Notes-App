<Window x:Class="Notable.AddNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notiz hinzufügen" Height="300" Width="393">
    <StackPanel>
        <Label>Name:</Label>
        <TextBox x:Name="nameTextBox" Margin="5"></TextBox>
        <Label>Beschreibung:</Label>
        <TextBox x:Name="contentTextBox" Margin="5" Height="60"></TextBox>
        <CheckBox x:Name="favCheckBox" Content="Favorit" Margin="10"/>
        <Button Content="Speichern" Margin="150,5,150,1" Click="ButtonSaveAddNote_Click"></Button>
    </StackPanel>
</Window>
